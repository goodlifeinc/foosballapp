{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "curly": [
            2,
            "all"
        ],
        "operator-linebreak": [
            2,
            "after"
        ],
        "camelcase": [
            2,
            {
                "properties": "never"
            }
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-multi-str": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "space-unary-ops": [
            2,
            {
                "nonwords": false,
                "overrides": {}
            }
        ],
        "one-var": [
            2,
            "never"
        ],
        "keyword-spacing": [
            2,
            {}
        ],
        "space-infix-ops": 2,
        "space-before-blocks": [
            2,
            "always"
        ],
        "eol-last": 2,
        "space-before-function-paren": [
            2,
            "never"
        ],
        "array-bracket-spacing": [
            2,
            "always"
        ],
        "space-in-parens": [
            2,
            "always"
        ],
        "no-multiple-empty-lines": 2,
        "no-use-before-define": [
            "error",
            {
                "functions": true,
                "classes": true
            }
        ]
    }
}